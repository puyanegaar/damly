@model PunasMarketing.ViewModels.Marketer.MarketerViewModel
@{
    ViewBag.Title = "ویرایش بازاریاب";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="layout-content-body">
    <legend>
        <h2>ویرایش بازاریاب</h2>
    </legend>
    @using (Html.BeginForm("UpdateMarketer", "Marketer", FormMethod.Post, new { enctype = "multipart/form-data", id = "UploadFrom" }))
