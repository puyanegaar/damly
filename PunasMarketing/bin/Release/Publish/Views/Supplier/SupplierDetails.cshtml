@model PunasMarketing.Models.DomainModel.Supplier
@{
    ViewBag.Title = "اطلاعات تامین کننده";
}


<div class="layout-content-body">

    <div id="divInfo">
        <legend>
            <h2>اطلاعات تامین کننده</h2>
        </legend>
        <div class="card-body">
            <div class="form-group row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-9">
                    <p>@Model.Name</p>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">استان</label>
                <div class="col-md-9">
                    <p>@Model.City.Province.Name</p>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-2 col-form-label">شهر</label>
                <div class="col-md-9">
                    @Html.Raw(Model.City.Name)
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-9">
                    <p>@Model.Phone</p>
                </div>
            </div>


            <div class="form-group row">
                @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-9">
                    <p>@Model.Mobile</p>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-9">
                    <p>@Model.Address</p>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-9">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-12">
            <div class="margin-top">
                <div class="col-xs-12 col-md-12">
                    <a href="@Url.Action("Suppliers", "Supplier")" class="btn btn-default">برگشت</a>
                </div>
            </div>
        </div>

    </div>


</div>

@section Styles
{
    <style>
        .col-form-label {
            padding-top: 0;
            font-weight: bold !important
        }
    </style>
}

