@model IQueryable<PunasMarketing.Models.DomainModel.Unit>
@{
    ViewBag.Title = "لیست واحدهای اندازه گیری";
    int counter = 0;
}

<div class="layout-content-body">
    <div class="row gutter-xs">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-header">
                    <strong>لیست واحدهای اندازه گیری</strong>
                </div>

                <div class="card-body">
                    @AntiForgery.GetHtml()
                    <div class="md-form-group md-label-floating col-md-6">
                        <input class="md-form-control" type="text" name="name" id="searchbox" spellcheck="false" required="" aria-required="true">
                        <label class="md-control-label">جستجو</label>
                    </div>
                    <div class="md-form-group md-label-floating col-md-6">
                        <div class="margin-top">
                            <div class="col-xs-6 col-md-6">
                                <a href="/Unit/AddUnit" class="btn btn-success">افزودن واحد اندازه گیری </a>
                            </div>
                        </div>
                    </div>
                    <table id="demo-datatables-1" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
                        <thead>
                        <tr class="columnSize">
                            <th>
                                ردیف
                            </th>
                            <th>
                                شناسه
                            </th>
                            <th>
                                عنوان واحد اندازه گیری
                            </th>
                            <th>
                                نوع واحد
                            </th>

                            <th>عملیات</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="columnSize">
                                <td>
                                    @(++counter)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <span>@(item.IsMain ? "واحد اصلی" : "واحد فرعی")</span>
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "UpdateUnit", new { id = item.Id }, new { @class = "icon icon-pencil iconColor" })
                                    <a id="Delete" value="@item.Id" class="icon icon-remove iconColor"></a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

@section toastr {
    @Html.Raw(TempData["SaveMessage"])
}

@section scripts {
    <script>
        $(document).ready(function () {
            var dataTable = $('#demo-datatables-1').dataTable();
            $("#searchbox").keyup(function () {
                dataTable.fnFilter(this.value);
            });
        });
        $(function () {
            $("#demo-datatables-1").dataTable();
        });
        $(document).ready(function () {
            $("#demo-datatables-1_info").parent().addClass('col-sm-12');
        });

        //Unit();
        Delete('Unit', 'DeleteUnit');
    </script>
}

