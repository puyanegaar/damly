@model PunasMarketing.ViewModels.JobTitle.CreateJobTitleViewModel

@{
    ViewBag.Title = "افزودن عنوان شغلی";
}


<div class="layout-content-body">
    @using (Html.BeginForm("AddJobTitle", "JobTitle", FormMethod.Post))
    {
        <div id="divInfo">
            <legend>
                <h2>افزودن عنوان شغلی</h2>
            </legend>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="col-xs-6 col-md-6">
                <div class="md-form-group md-label-floating">
                    @Html.TextBoxFor(model => model.JobTitleModel.Name, new { @class = "md-form-control", type = "text", spellcheck = "false" })
                    @Html.LabelFor(model => model.JobTitleModel.Name, new { @class = "md-control-label" })
                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.JobTitleModel.Name)</span>
                </div>
            </div>

            <div class="col-xs-6 col-md-6">
                <div class="md-form-group md-label-floating">
                    @Html.DropDownListFor(model => model.JobTitleModel.SectionId, new SelectList(Model.Sections, "Id", "Name"), "نام بخش", new { @class = "md-form-control" })
                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.JobTitleModel.SectionId)</span>
                </div>
            </div>


            <div class="col-xs-12 col-md-12">
                <div class="margin-top">
                    <div class="col-xs-12 col-md-12">
                        <input class="btn btn-success" type="submit" value="ثبت اطلاعات" />
                        <a href="@Url.Action("JobTitles","JobTitle")" class="btn btn-default">برگشت</a>
                    </div>
                </div>
            </div>

        </div>
    }

</div>

@section toastr {
    @Html.Raw(TempData["UploadMessage"])
    @Html.Raw(TempData["deleteMessage"])
    @Html.Raw(TempData["SaveMessage"])
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}










