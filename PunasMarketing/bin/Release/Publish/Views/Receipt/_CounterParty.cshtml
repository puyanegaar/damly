                            <td>
                                <a id="SelectUser" value="@item.Id" class="icon icon-square-o iconColor text-center" style="cursor:pointer;text-decoration:none"></a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            break;

    }
}
