@model PunasMarketing.ViewModels.Receipt.ReceiptViewModel

@{
    switch (Model.type)
    {
        case 1:
            <div class="md-form-group md-label-static col-md-6">
                <input class="md-form-control" type="text" name="name" id="searchbox" spellcheck="false" required="" aria-required="true">
                <label class="md-control-label">جستجو</label>
            </div>
            <table id="ItemTable" class="table table-striped table-nowrap dataTable" cellspacing="0">
                <thead>
                    <tr class="columnSize">
                        <th>
                            نام بانک
                        </th>
                        <th>
                            نام صاحب حساب
                        </th>
                        <th>
                            شماره حساب
                        </th>
                        <th>
                            شعبه
                        </th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Banks)
                    {

                        <tr class="columnSize">
                            <td>
                                @Html.DisplayFor(modelItem => item.Bank.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Owner)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountNum)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BranchName)
                            </td>

                            <td>
                                <a id="SelectItem" value="@item.Id" class="icon icon-square-o iconColor text-center" style="cursor:pointer;text-decoration:none"></a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            break;
        case 2:
            <div class="md-form-group md-label-static col-md-6">
                <input class="md-form-control" type="text" name="name" id="searchbox" spellcheck="false" required="" aria-required="true">
                <label class="md-control-label">جستجو</label>
