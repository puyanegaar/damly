                        <th>
                            منطقه
                        </th>
                        <th>
                            موبایل
                        </th>

                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.customers)
                    {

                        <tr class="columnSize">
                            <td>
                                @Html.DisplayFor(modelItem => item.BusinessName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OwnerName)
