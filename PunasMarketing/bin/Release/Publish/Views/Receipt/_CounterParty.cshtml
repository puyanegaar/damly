                    <tr class="columnSize">
                        <th>
                            عنوان هزینه
                        </th>
                        <th>
                            گروه هزینه
                        </th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.costs)
                    {

                        <tr class="columnSize">
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CostCategory.Name)
                            </td>
                            <td>
                                <a id="SelectItem" value="@item.Id" UserName="@item.Name" class="icon icon-square-o iconColor text-center" style="cursor:pointer;text-decoration:none"></a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            break;
        case 3:
            <div class="md-form-group md-label-static col-md-6">
                <input class="md-form-control" type="text" name="name" id="searchbox" spellcheck="false" required="" aria-required="true">
