@model PunasMarketing.ViewModels.Customer.CustomerViewModel

@{
    ViewBag.Title = "افزودن مشتری";
}


<div class="layout-content-body">
    @using (Html.BeginForm("AddCustomer", "Customer", FormMethod.Post, 
        new { enctype = "multipart/form-data", id = "UploadFrom", autocomplete = "off" }))
    {
        <div id="divInfo">
            <legend>
                <h2>افزودن مشتری</h2>
            </legend>

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="col-xs-12 col-md-12">
                <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 1px 2px 0 rgba(0, 0, 0, 0.19); border-radius:5px;">
                    <div class="card-header">
                        <strong>اطلاعات شخصی</strong>
                    </div>

                    <div class="card-body">
                        <div class="col-xs-8 col-md-8">
                            <div class="col-xs-12 col-md-12">
                                <div class="md-form-group md-label-static">
                                    @Html.TextBoxFor(model => model.Customer.BusinessName, new { @class = "md-form-control", type = "text", spellcheck = "false" })
                                    @Html.LabelFor(model => model.Customer.BusinessName, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.BusinessName)</span>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-12">
                                <div class="md-form-group md-label-static">
                                    @Html.TextBoxFor(model => model.Customer.OwnerName, new { @class = "md-form-control", type = "text", spellcheck = "false" })
                                    @Html.LabelFor(model => model.Customer.OwnerName, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.OwnerName)</span>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-12">
                                <div class="md-form-group md-label-static">
                                    @Html.TextBoxFor(model => model.Customer.CodeMelli, new { @class = "md-form-control", type = "number", spellcheck = "false" })
                                    @Html.LabelFor(model => model.Customer.CodeMelli, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.CodeMelli)</span>
                                </div>
                            </div>

                            <div class="col-xs-6 col-md-6">
                                <div class="md-form-group md-label-static">
                                    @Html.DropDownListFor(model => model.Customer.CustomerCategoryId, new SelectList(Model.CustomerCategories, "Id", "Name", Model.Customer.CustomerCategoryId), "-", new { @class = "md-form-control" })
                                    @Html.LabelFor(model => model.Customer.CustomerCategoryId, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.CustomerCategoryId)</span>
                                </div>
                            </div>

                            <div class="col-xs-6 col-md-6">
                                <div class="md-form-group md-label-static">
                                    @Html.DropDownListFor(model => model.Customer.MarketerId, new SelectList(Model.Marketers, "Id", "FullName", Model.Customer.MarketerId), "-", new { @class = "md-form-control" })
                                    @Html.LabelFor(model => model.Customer.MarketerId, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.MarketerId)</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-xs-4 col-md-4">
                            <div class="col-xs-12 col-md-12" style="">
                                <input id="ImageFile" name="ImageFile" type="file" style="display:none" required="" />
                                <img id="Image" src="~/Content/Upload/Image/Personnels/sampleImage.png" style="width:150px;height:200px; display:block ;margin:auto;cursor:pointer" />
                            </div>
                            <div class="col-xs-12 col-md-12" style="margin-top:15px">
                                <input id="ImageSelect" class="btn btn-info" type="button" value="انتخاب عکس" style="display:block ;margin:auto" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-12">
                <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 1px 2px 0 rgba(0, 0, 0, 0.19); border-radius:5px;">
                    <div class="card-header">
                        <strong>اطلاعات تماس</strong>
                    </div>
                    <div class="card-body">
                        <div class="col-xs-12 col-md-12">
                            <div class="col-xs-4 col-md-4">
                                <div class="md-form-group md-label-static">
                                    @Html.TextBoxFor(model => model.Customer.Mobile1, new { @class = "md-form-control", type = "number", spellcheck = "false" })
                                    @Html.LabelFor(model => model.Customer.Mobile1, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.Mobile1)</span>
                                </div>
                            </div>

                            <div class="col-xs-4 col-md-4">
                                <div class="md-form-group md-label-static">
                                    @Html.TextBoxFor(model => model.Customer.Mobile2, new { @class = "md-form-control", type = "number", spellcheck = "false" })
                                    @Html.LabelFor(model => model.Customer.Mobile2, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.Mobile2)</span>
                                </div>
                            </div>

                            <div class="col-xs-4 col-md-4">
                                <div class="md-form-group md-label-static">
                                    @Html.TextBoxFor(model => model.Customer.Phone, new { @class = "md-form-control", type = "number", spellcheck = "false" })
                                    @Html.LabelFor(model => model.Customer.Phone, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.Phone)</span>
                                </div>
                            </div>

                            <div class="col-xs-4 col-md-4">
                                <div class="md-form-group md-label-static">
                                    @Html.DropDownListFor(model => model.Customer.ProvinceId, new SelectList(Model.Provinces, "Id", "Name", Model.Customer.ProvinceId), "-", new { @class = "md-form-control" })
                                    @Html.LabelFor(model => model.Customer.ProvinceId, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.ProvinceId)</span>
                                </div>
                            </div>

                            <div class="col-xs-4 col-md-4">
                                <div class="md-form-group md-label-static" id="DrpCities">
                                    @Html.DropDownListFor(model => model.Customer.CityId, new SelectList(Model.Cities, "Id", "Name", Model.Customer.CityId), "-", new { @class = "md-form-control" })
                                    @Html.LabelFor(model => model.Customer.CityId, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.CityId)</span>
                                </div>
                            </div>

                            <div class="col-xs-4 col-md-4">
                                <div class="md-form-group md-label-static" id="DrpRegions">
                                    @Html.DropDownListFor(model => model.Customer.RegionId, new SelectList(Model.Regions, "Id", "Name", Model.Customer.RegionId), "-", new { @class = "md-form-control" })
                                    @Html.LabelFor(model => model.Customer.RegionId, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.RegionId)</span>
                                </div>
                            </div>

                            <div class="col-xs-4 col-md-4">
                                <div class="md-form-group md-label-static">
                                    @Html.TextBoxFor(model => model.Customer.Email, new { @class = "md-form-control", type = "text", spellcheck = "false" })
                                    @Html.LabelFor(model => model.Customer.Email, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.Email)</span>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-12">
                                <div class="md-form-group md-label-static">
                                    @Html.TextBoxFor(model => model.Customer.Address, new { @class = "md-form-control", type = "text", spellcheck = "false" })
                                    @Html.LabelFor(model => model.Customer.Address, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Customer.Address)</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-12">
                <div class="margin-top">
                    <div class="col-xs-12 col-md-12">
                        <input class="btn btn-success" type="submit" value="ثبت اطلاعات" />
                        <a href="@Url.Action("Customers", "Customer")" class="btn btn-default">برگشت</a>
                    </div>
                </div>
            </div>

        </div>
    }

</div>

@section toastr {
    @Html.Raw(TempData["SaveMessage"])
}


@section Scripts {
    @Scripts.Render("~/bundles/customersjs")
    <script>
        addCustomer();

        SelectImage();
    </script>
}


