@model PunasMarketing.Models.DomainModel.Section
@{
    ViewBag.Title = "ویرایش بخش";
}

<div class="layout-content-body">
    <div class="row gutter-xs">
        <div class="col-xs-12">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("UpdateSection", "Section", FormMethod.Post, new {autocomplete = "off"}))
                    {
                        <div id="divInfo">
                            <legend>
                                <h2>ویرایش بخش</h2>
                            </legend>
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(x => x.Id)
                            <div class="col-xs-12 col-md-12">
                                <div class="md-form-group md-label-floating">
                                    @Html.TextBoxFor(model => model.Name, new { @class = "md-form-control", type = "text", spellcheck = "false", required = "" })
                                    @Html.LabelFor(model => model.Name, new { @class = "md-control-label" })
                                    <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Name)</span>
                                </div>
                            </div>

                            <div class="col-xs-12 col-md-12">
                                <div class="margin-top">
                                    <div class="col-xs-12 col-md-12">
                                        <input class="btn btn-success" type="submit" value="ویرایش اطلاعات" />
                                        <a href="@Url.Action("Sections","Section")" class="btn btn-default">برگشت</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section toastr {
    @Html.Raw(TempData["SaveMessage"])
}
