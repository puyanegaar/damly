<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log In</title>

    <link rel="apple-touch-icon" sizes="180x180" href="apple-touch-icon.png">
    <link rel="icon" type="~/Content/ArasLogo.png" href="~/Content/ArasLogo.png" sizes="32x32">
    <link rel="icon" type="~/Content/ArasLogo.png" href="~/Content/ArasLogo.png" sizes="16x16">
    <link rel="manifest" href="manifest.json">
    <link rel="mask-icon" href="safari-pinned-tab.svg" color="#d9230f">
    <meta name="theme-color" content="#ffffff">
    @*<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,400italic,500,700">
        <link rel="stylesheet" href="~/Content/AdminHtml/css/vendor-rtl.min.css">
        <link rel="stylesheet" href="~/Content/AdminHtml/css/elephant-rtl.min.css">
        <link rel="stylesheet" href="~/Content/AdminHtml/css/login-3-rtl.min.css">*@

    <link href="~/Content/AdminHtml/css/elephant-rtl.min.css" rel="stylesheet" />
    <link href="~/Content/AdminHtml/css/login-3-rtl.min.css" rel="stylesheet" />
    <link href="~/Content/AdminHtml/css/vendor-rtl.min.css" rel="stylesheet" />
</head>
<body style="font-family: 'B Yekan';font-size:small">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="login">
            <div class="login-body">
                <h3 class="login-heading">ورود</h3>
                <div class="login-form">
                    <form data-toggle="md-validator">


                        <div class="md-form-group md-label-static">
                            @Html.TextBoxFor(model => model.UserName, new { @class = "md-form-control", type = "text", spellcheck = "false" })
                            @Html.LabelFor(model => model.UserName, new { @class = "md-control-label" })
                            <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.UserName)</span>
                        </div>

                        <div class="md-form-group md-label-static">
                            @Html.TextBoxFor(model => model.Password, new { @class = "md-form-control", type = "password",spellcheck = "false"  })
                            @Html.LabelFor(model => model.Password, new { @class = "md-control-label" })
                            <span class="has-error md-help-block valError">@Html.ValidationMessageFor(model => model.Password)</span>
                        </div>
                        <div class="md-form-group md-custom-controls">
                            <label class="custom-control custom-control-primary custom-checkbox">
                                <input class="custom-control-input" data-val="true" type="checkbox" id="Remmeber" name="Remmeber" value="true">
                                <span class="custom-control-indicator"></span>
                                <span class="custom-control-label">مرا به خاطر بسپار</span>
                            </label>
                        </div>
                        @Html.MathCaptcha()
                        <br />
                        <button class="btn btn-primary btn-block" type="submit">ورود</button>
                    </form>
                </div>
            </div>
        </div>
    }

    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Content/AdminHtml/js/vendor.min.js"></script>
    <script src="~/Content/AdminHtml/js/elephant.min.js"></script>
    <script src="https://www.google.com/recaptcha/api.js?hl=fa" async defer></script>

    @Html.Raw(TempData["BadLogin"])


</body>
