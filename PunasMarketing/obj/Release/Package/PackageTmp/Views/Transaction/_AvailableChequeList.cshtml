@model PunasMarketing.ViewModels.Transaction.PaymentViewModel
<div class="md-form-group md-label-static col-md-6">
    <input class="md-form-control" type="text" name="name" id="Chequesearchbox" spellcheck="false" required="" aria-required="true">
    <label class="md-control-label">جستجو</label>
</div>
<table id="AvailableChequeItems" class="table table-striped table-nowrap dataTable" cellspacing="0" width="100%">
    <thead>
        <tr class="columnSize">
            <th>
                شماره چک
            </th>
            <th>
                تاریخ سررسید
            </th>
            <th>
                مبلغ
            </th>
            <th>
                بانک صادر کننده چک
            </th>
           
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AvailableCheque)
        {
            <tr class="columnSize">
                <td>
                    @Html.DisplayFor(modelItem => item.ChequeNum)
                </td>

                <td>
                    @item.DueDate.ToPersianDateTime().ToString("yyyy/MM/dd")
                </td>
                <td>
                    @item.Amount.ToPrice()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bank.Name)
                </td>
               
                <td>
                    <a id="SelectAvailableCheque" value="@item.Id" class="icon icon-pencil iconColor" style="text-decoration:none;cursor:pointer"></a>
            </tr>
        }
    </tbody>
</table>